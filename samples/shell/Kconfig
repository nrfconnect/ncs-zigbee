source "Kconfig.zephyr"

menuconfig ZIGBEE_SHELL_USB
	bool "USB support for Zigbee shell"
	depends on DT_HAS_ZEPHYR_CDC_ACM_UART_ENABLED
	select USB_DEVICE_STACK_NEXT
	select USBD_CDC_ACM_CLASS
	select USBD_SHELL
	select UART_LINE_CTRL
	select STDOUT_CONSOLE
	select SHELL_BACKEND_SERIAL_CHECK_DTR
	help
	  Enable USB CDC ACM support for Zigbee shell interface.
	  This allows using the shell over USB instead of UART.
	  Only available on boards with USB device controller support.

if ZIGBEE_SHELL_USB

config ZIGBEE_SHELL_USB_VID
	hex "USB Vendor ID"
	default 0x2fe3
	help
	  USB Vendor ID for the Zigbee shell device.
	  Default uses Zephyr project VID (for samples only).

config ZIGBEE_SHELL_USB_PID
	hex "USB Product ID"
	default 0x0100
	help
	  USB Product ID for the Zigbee shell device.

config ZIGBEE_SHELL_USB_MAX_POWER
	int "USB device max power consumption (mA)"
	default 100
	range 2 500
	help
	  Maximum power consumption of the USB device in milliamperes.

config ZIGBEE_SHELL_USB_MANUFACTURER
	string "USB device manufacturer string"
	default "Nordic Semiconductor ASA"
	help
	  USB device manufacturer string descriptor.

config ZIGBEE_SHELL_USB_PRODUCT
	string "USB device product string"
	default "Zigbee Shell"
	help
	  USB device product string descriptor.

endif # ZIGBEE_SHELL_USB
